<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.authActivity.RegisterActivity"
    android:background="@drawable/gradient_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_head"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:text="Đăng ký tài khoản"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_head2"
            android:layout_below="@+id/textView_register_head"
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:text="Điền thông tin bên dưới"
            android:textStyle="normal"
            android:layout_marginTop="5dp">
        </TextView>
        <!--name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_name"
            android:layout_below="@+id/textView_register_head2"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageViewName"
                android:background="@drawable/ic_profile"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_register_name"
                android:layout_toEndOf="@id/imageViewName"
                android:text="Họ tên*"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="12sp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_user"
                android:layout_below="@+id/textView_register_name"
                android:layout_toEndOf="@+id/imageViewName"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="6sp">
            </EditText>
        </RelativeLayout>
        <!--email-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_email"
            android:layout_below="@+id/RL_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageViewEmail"
                android:background="@drawable/download"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_register_email"
                android:layout_toEndOf="@id/imageViewEmail"
                android:text="Email*"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="12sp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_email"
                android:layout_below="@+id/textView_register_email"
                android:layout_toEndOf="@+id/imageViewEmail"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="6sp">
            </EditText>
        </RelativeLayout>
        <!--phone-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_phone"
            android:layout_below="@+id/RL_email"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageViewPhone"
                android:background="@drawable/phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_register_phone"
                android:layout_toEndOf="@id/imageViewPhone"
                android:text="Số điện thoại*"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="12sp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_phone"
                android:layout_below="@+id/textView_register_phone"
                android:layout_toEndOf="@+id/imageViewPhone"
                android:background="@android:color/transparent"
                android:layout_marginBottom="10dp"
                android:inputType="phone"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="6sp">
            </EditText>
        </RelativeLayout>
        <!--password-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_password"
            android:layout_below="@+id/RL_phone"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageViewPassword"
                android:background="@drawable/ic_pass"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_register_password"
                android:layout_toEndOf="@id/imageViewPassword"
                android:text="Mật khẩu*"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="12sp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_password"
                android:layout_below="@+id/textView_register_password"
                android:layout_toEndOf="@+id/imageViewPassword"
                android:background="@android:color/transparent"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:padding="6sp">
            </EditText>
        </RelativeLayout>
        <!--cf password-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_cf_password"
            android:layout_below="@+id/RL_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageViewCfPassword"
                android:background="@drawable/ic_pass"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_register_cf_password"
                android:layout_toEndOf="@id/imageViewCfPassword"
                android:text="Xác nhận mật khẩu*"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="12sp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_register_cf_password"
                android:layout_below="@+id/textView_register_cf_password"
                android:layout_toEndOf="@+id/imageViewCfPassword"
                android:background="@android:color/transparent"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="6sp">
            </EditText>
        </RelativeLayout>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_register"
            android:layout_below="@+id/RL_cf_password"
            android:text="Đăng ký"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:background="@drawable/border_button">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/button_register"
            android:layout_marginTop="50dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? "
                android:textColor="@color/light_gray"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_login_link"
                android:textColor="@color/green"
                android:text="@string/Login"
                android:textStyle="bold"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>