<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo_music"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_music"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AndroidMusicApp"
        tools:targetApi="31">
        <activity
            android:name=".activity.authActivity.LoginActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.homeActivity.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.authActivity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activity.authActivity.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
<!--                    .activity.MainActivity-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>